<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= userData.name %> ‚Ä¢ Instagram</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #fafafa;
        }

        .container {
            width: 90%;
            max-width: 975px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 44px;
        }

        .profile-pic-container {
            margin-right: 60px;
            flex-shrink: 0;
        }

        .profile-pic {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #dbdbdb;
        }

        .profile-info {
            flex-grow: 1;
        }

        .profile-top {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .profile-top h1 {
            font-size: 28px;
            font-weight: 300;
        }

        .profile-top .btn {
            padding: 7px 16px;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
        }

        .follow-btn {
            background-color: #0095f6;
            color: white;
            border: none;
        }

        .message-btn {
            background-color: #efefef;
            color: black;
            border: 1px solid #dbdbdb;
        }

        .stats {
            display: flex;
            gap: 40px;
            margin-bottom: 20px;
        }

        .stats p {
            font-size: 16px;
        }

        .stats strong {
            font-weight: 600;
        }
        
        .bio {
            font-size: 16px;
        }
        
        .bio p:first-child {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .post-grid-header {
            border-top: 1px solid #dbdbdb;
            text-align: center;
            padding: 12px 0;
            font-weight: 600;
            color: #8e8e8e;
            font-size: 12px;
            letter-spacing: 1px;
        }

        .post-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 28px;
        }

        .post-item {
            position: relative;
            padding-top: 100%; 
            overflow: hidden;
            cursor: pointer;
        }

        .post-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .post-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .post-item:hover .post-overlay {
            opacity: 1;
        }
        
        .post-stats {
            display: flex;
            gap: 30px;
        }

        .post-stats span {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        @media (max-width: 640px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }
            .profile-pic-container {
                margin-right: 0;
                margin-bottom: 20px;
            }
            .profile-top {
                justify-content: center;
            }
            .stats {
                justify-content: center;
            }
            .post-grid {
                gap: 5px;
            }
        }

    </style>
</head>
<body>

    <div class="container">
        <header class="profile-header">
            <div class="profile-pic-container">
                <% if (userData.posts.length > 0) { %>
                    <img src="<%= userData.posts[0].image %>" alt="<%= userData.name %>'s profile picture" class="profile-pic">
                <% } else { %>
                    <div class="profile-pic" style="background-color: #efefef;"></div>
                <% } %>
            </div>

            <section class="profile-info">
                <div class="profile-top">
                    <h1><%=userData.name%></h1>
                    <button class="btn follow-btn">Follow</button>
                    <button class="btn message-btn">Message</button>
                </div>

                <div class="stats">
                    <p><strong><%=userData.posts.length%></strong> posts</p>
                    <p><strong><%=userData.followers%></strong> followers</p>
                    <p><strong><%=userData.following%></strong> following</p>
                </div>
                
                <div class="bio">
                    <p><%= userData.name %></p>
                    <p>hello hoomans</p>
                </div>
            </section>
        </header>

        <div class="post-grid-header">
            <span>POSTS</span>
        </div>
        
        <main class="post-grid">
            <% for (let post of userData.posts) { %>
                <div class="post-item">
                    <img src="<%= post.image %>" alt="Post by <%= userData.name %>" class="post-image">
                    <div class="post-overlay">
                        <div class="post-stats">
                            <span>‚ù§Ô∏è <%= post.likes %></span>
                            <span>üí¨ <%= post.comments %></span>
                        </div>
                    </div>
                </div>
            <% } %>
        </main>
    </div>

</body>
</html>